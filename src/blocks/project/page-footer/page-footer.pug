mixin page-footer(modifier)
  footer.footer
    div(class="footer__top footer__top--"+ modifier +"")
      .container
        .contacts.footer__contacts
          p.uppertext.contacts__uppertext приглашаем к сотрудничеству дилеров!
          .contacts__address
            p.contacts__text ул. Большая Конюшенная, д. 19/8
            p.contacts__text Санкт-Петербург
      .map-wrapper
        <iframe class="map-wrapper__map" width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=%D1%83%D0%BB.%20%D0%91%D0%BE%D0%BB%D1%8C%D1%88%D0%B0%D1%8F%20%D0%9A%D0%BE%D0%BD%D1%8E%D1%88%D0%B5%D0%BD%D0%BD%D0%B0%D1%8F,%20%D0%B4.%2019/8%20%20%20%20%D0%A1%D0%B0%D0%BD%D0%BA%D1%82-%D0%9F%D0%B5%D1%82%D0%B5%D1%80%D0%B1%D1%83%D1%80%D0%B3+()&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
        .map-wrapper__inner
          .contacts.map-wrapper__contacts
            p.uppertext.contacts__uppertext приглашаем к сотрудничеству дилеров!
            .contacts__address
              p.contacts__text ул. Большая Конюшенная, д. 19/8
              p.contacts__text Санкт-Петербург
    .footer__bottom
      .container
        .footer__row
          .footer__col--12.footer__col--md-4
            a.footer__logo-wrapper(href="/")
              img.logo(src='img/content/footer-logo.svg' height="24" alt='логотип') 
          .footer__col--12.footer__col--md-4
            ul.list.social.footer__social
              li.social__item
                a.link.social__link(href="https://vk.com" target="_blank")
                  svg.link__icon.link__icon--social.link__icon--vk
                    use(xlink:href="img/symbols.svg#vk")
                  span.visually-hidden мы вконтакте
              li.social__item
                a.link.social__link(href="https://www.instagram.com" target="_blank")
                  svg.link__icon.link__icon--social.link__icon--ins
                    use(xlink:href="img/symbols.svg#instagram")
                  span.visually-hidden мы в инстаграме
              li.social__item
                a.link.social__link(href="#")
                  svg.link__icon.link__icon--social.link__icon--fb
                    use(xlink:href="img/symbols.svg#facebook")
                  span.visually-hidden мы в фейсбуке
          .footer__col--12.footer__col--md-4
            .footer__author 
              a.link(href="https://htmlacademy.ru/" target="_blank")
                span.footer__credits HTML Academy
              a.link(href="https://htmlacademy.ru/" target="_blank")
                svg.link__icon.link__icon--social.link__icon--html
                  use(xlink:href="img/symbols.svg#html-logo")
                  
