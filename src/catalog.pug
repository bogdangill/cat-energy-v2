extends pug/layout.pug

block meta
  title Главная
block header
  +page-header("default", 1)
block content
  main
    section.catalog
      .container
        h1.title.catalog__title.title--section.visible.visible--on Каталог продукции
        h2.visually-hidden Основная продукция
        ul.list.catalog__list
          include blocks/components/item/item.data.pug
          each item in goodData
            li.catalog__good
              +item("good", item.img, item.title, item.weight, item.taste, item.price)
          li.catalog__good
            .item.item--more
              .item__img-wrapper
                .item__img.item__img--cross
                  hr
                  hr
              .item__description.item__description--more
                h3.title.item__title Показать еще 100500 товаров
                p.item__text На самом деле вкусов<br>гораздо больше!
              button.btn.item__btn.btn--grey показать все
    section.extra
      .container
        .extra__inner
          .linethrough
            h2.title.linethrough__title Дополнительные товары
          ul.list.extra__list
            each item in extraData
              li.extra__good
                +item("extra", undefined, item.title, item.weight, undefined, item.price)
          .extra__banner.banner
            svg.banner__icon
              use(xlink:href="img/symbols.svg#gift")
            p.banner__text Закажите все <br> и получите чехол для кота в подарок!
block footer
  +page-footer("default")