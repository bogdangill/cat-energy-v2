extends pug/layout.pug

block meta
  title Главная
block header
  +page-header("index", 0)
block content
  main
    section.promo
      .promo__content-wrapper
        .promo__content(id='trigger')
          h1.title.promo__title.title--section Функциональное питание для котов
          p.uppertext.promo__uppertext Занялся собой? Займись котом!
          img.promo__image(src='img/cat-energy-img/index-can.png' alt='продукция cat energy pro курица')
          a.link.btn.btn--primary.promo__btn(href="#") подобрать программу
      .promo__background
        .promo__bg-image
    section.goal
      h2.title(hidden) Цель
      ul.list.row
        li.list__item.col-12.col-xl
          +card({
            iconClass: "icon-container__icon--slim",
            img: "img/cat-energy-img/cat-slim.svg",
            caption: "худая кошка",
            title: "похудение",
            description: "Ваш кот весит больше собаки и почти утратил способность лазить по деревьям? Пора на диету! Cat Energy Slim поможет вашему питомцу сбросить лишний вес.",
            url: "#",
            linkText: "каталог slim"
          })
        li.list__item.col-12.col-xl
          +card({
            iconClass: "icon-container__icon--pro",
            img: "img/cat-energy-img/cat-pro.svg",
            caption: "раскачанная кошка",
            title: "набор массы",
            description: "Заработать авторитет среди дворовых котов и даже собак? Серия Cat Energy Pro поможет вашему коту нарастить необходимые мышцы!",
            url: "#",
            linkText: "каталог pro"
          })
    section.advantages
      h2.title.advantages__title.title--section Как это работает
      ol.list.row
        include blocks/components/advantage/advantage.data.pug
        each item in advantageData
          li.list__item.list__item--counter.col-12.col-md-6.col-xl
            +advantage(item.icon_class, item.description)
    section.demonstration
      .demonstration__wrapper
        .demonstration__description
          h2.title.demonstration__title.title--section Живой пример
          p.text.demonstration__text 
            | Борис сбросил 5 кг за 2 месяца, просто заменив свой 
            | обычный корм на Cat Energy Slim. Отличный результат 
            | без изнуряющих тренировок! При этом он не менял своих 
            | привычек и по-прежнему спит по 16 часов в день.
          .numbers.demonstration__numbers
            .row
              .col-12.col-md-6.col-xl-12
                .numbers__cards
                  fieldset.numbers__item
                    span.uppertext.numbers__number 5 КГ
                    legend.text.numbers__text снижение веса
                  fieldset.numbers__item
                    span.uppertext.numbers__number 60 ДНЕЙ
                    legend.text.numbers__text затрачено времени
              .col-12.col-md-6.col-xl-12 
                .numbers__expenses-container
                  span.uppertext.numbers__uppertext Затраты на питание: 
                  span.uppertext.numbers__uppertext 15 000 РУБ. 
        .demonstration__interactive
          .slider
            .slider__inner
              .slider__slide-wrapper.slider__slide-wrapper--left-side
                .slider__slide.slider__slide--left
              .slider__slide-wrapper.slider__slide-wrapper--right-side
                .slider__slide.slider__slide--right
            .slider__control-box
              span.uppertext.slider__control-text(data-state="after") стало
              input.slider__control(type="range" min="0" max="100" value="50" step="1")
              span.uppertext.slider__control-text(data-state="before") было
block footer
  +page-footer("index")
