extends pug/layout.pug

block meta
  title Главная
block header
  +page-header("default", 2)
block content
  main
    section.programm
      div.programm__intro
        h1.title.programm__title.title--section.visible.visible--on Подбор программы
        p.uppertext.programm__text.visible.visible--on Заполните анкету, и мы подберем<br> программу питания для вашего кота
      form.form.programm__form(action="#" method="POST")
        fieldset.form__section
          .form__container
            .form__group.form__col--xl-6-m-0
              label.input-box.form__input-box.uppertext
                span(class="input-box__name") ИМЯ:*
                input(type="text" class="input-box__input" placeholder="БАРСИК" required)
              label.input-box.form__input-box.uppertext
                span(class="input-box__name") Вес (кг):*
                input(type="number" class="input-box__input" placeholder="7" required)
              label.input-box.form__input-box.uppertext
                span(class="input-box__name") Возраст (лет):
                input(type="number" class="input-box__input" placeholder="7")
            .form__radiobuttons.form__col--xl-6-m-0
              label.input-box.form__input-box.input-box--custom.uppertext
                input(type="radio" class="input-box__input--custom input-box__input--custom--radio" name="choice" value="diet" checked)
                span(class="input-box__name input-box__name--custom input-box__name--custom--radio") похудение
              label.input-box.form__input-box.input-box--custom.uppertext
                input(type="radio" class="input-box__input--custom input-box__input--custom--radio" name="choice" value="mass")
                span(class="input-box__name input-box__name--custom input-box__name--custom--radio") Набор массы
              label.input-box.form__input-box.input-box--custom.uppertext
                input(type="radio" class="input-box__input--custom input-box__input--custom--radio" name="choice" value="idk")
                span(class="input-box__name input-box__name--custom input-box__name--custom--radio") Не знаю (Нужен ваш совет)
        fieldset.form__section.form__section--linethrough
          .form__container
            .linethrough.linethrough--mb-70px
              legend.title.linethrough__title Контактные данные (владельца кота)
            label.input-box.form__input-box.uppertext.form__col--xl-6-m-0
              span(class="input-box__name") E-mail:*
              input(type="email" class="input-box__input" name="email" placeholder="kuklachev@gmail.com" required)
              <svg class="input-box__icon input-box__icon--email" width="20" height="15" viewBox="0 0 20 15" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 5.875V14H19V5.875M1 1V2.625L10 9.66667L19 2.625V1H1Z"/>
              </svg>
            label.input-box.form__input-box.uppertext.form__col--xl-6-m-0
              span(class="input-box__name") Телефон:*
              input(type="tel" class="input-box__input" name="phone" placeholder="8 (960) 900-60-90" required)
              <svg class="input-box__icon input-box__icon--phone" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 21">
                <g clip-path="url(#clip0)">
                  <path d="M17.9 9.753H9.4v1.204h8.5l-2.1 2.107.9.903 3.1-3.11a.754.754 0 000-.904l-3.1-3.11-.9.903 2.1 2.007zM8.1 19.787v-6.221a.653.653 0 00-.6-.602H3.1a1.226 1.226 0 001.2 1.204h2.5v5.017H3.1a1.784 1.784 0 01-1.728-1.02 1.801 1.801 0 01-.172-.686V3.431a1.78 1.78 0 01.483-1.25A1.767 1.767 0 012.9 1.624h3.9v5.017H4.4a1.218 1.218 0 00-1.2 1.204h4.4a.649.649 0 00.6-.602V.923A.863.863 0 007.5.32H3.1a2.99 2.99 0 00-2.151.81A3.01 3.01 0 000 3.23v13.948a2.91 2.91 0 00.772 2.192 2.89 2.89 0 002.128.919h4.6a.499.499 0 00.6-.502z"/>
                </g>
                <defs>
                  <clipPath id="clip0">
                    <path fill="#fff" transform="translate(0 .32)" d="M0 0h20v20.069H0z"/>
                  </clipPath>
                </defs>
              </svg>
        fieldset.form__section.form__section--linethrough
          .form__container
            .linethrough
              legend.title.linethrough__title Комментарий
            textarea(class="textarea uppertext" name="comment", cols="50", rows="5" placeholder="Расскажите обо всех повАдках кота")
        fieldset.form__section.form__section--linethrough
          .form__container
            .linethrough
              legend.title.linethrough__title Дополнительно
            label.input-box.form__input-box.input-box--custom.uppertext.form__col--md-6.form__col--xl-3
              input(type="checkbox" class="input-box__input--custom input-box__input--custom--checkbox" name="sweet" checked)
              span(class="input-box__name input-box__name--custom input-box__name--custom--checkbox") сахарозаменитель
            label.input-box.form__input-box.input-box--custom.uppertext.form__col--md-6.form__col--xl-3
              input(type="checkbox" class="input-box__input--custom input-box__input--custom--checkbox" name="water")
              span(class="input-box__name input-box__name--custom input-box__name--custom--checkbox") питьевая вода
            label.input-box.form__input-box.input-box--custom.uppertext.form__col--md-6.form__col--xl-3
              input(type="checkbox" class="input-box__input--custom input-box__input--custom--checkbox" name="milk")
              span(class="input-box__name input-box__name--custom input-box__name--custom--checkbox") молоко
            label.input-box.form__input-box.input-box--custom.uppertext.form__col--md-6.form__col--xl-3
              input(type="checkbox" class="input-box__input--custom input-box__input--custom--checkbox" name="vitamin")
              span(class="input-box__name input-box__name--custom input-box__name--custom--checkbox") витамины
            .form__group.form__group--submit.form__col--md-6
              button(type="submit" class="btn form__submit btn--primary") отправить заявку
            .form__group.form__group--hint.form__col--md-6
              small.text.form__text * — Обязательные поля
block footer
  +page-footer("default")